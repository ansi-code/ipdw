{
  "include": ["src"],
  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "module": "es2020",
    "target": "es2020",
    "moduleResolution": "Node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
